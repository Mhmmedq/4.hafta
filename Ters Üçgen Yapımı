import java.util.Scanner;
public class giris {
    public static void main(String[] args) {
        Scanner scr =new Scanner(System.in);
        System.out.print("sayiyi giriiniz: ");
       int n=scr.nextInt();
       for (int i=1 ;i<=n; i++){
           for (int k=0;k<i;k++) {
               System.out.print(" ");
           }
           for (int w=2*(n-i)+1 ; w>0 ; w--){
               System.out.print("*");
           }

           System.out.println("");
       }
    }
}
